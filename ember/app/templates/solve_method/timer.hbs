<h4>{{solve.scramble}}</h4>

<div>
	{{#if solveMethod.isMultiStep}}
		{{status-pills
			pills = solveMethodStepNames 
			currentIndex = solve.currentStepIndex
		}}
	{{/if}}
	<h2>
		{{#if solveMethod.isMultiStep}}
			<small class="text-primary">{{ms-to-s time}}</small> / 
		{{/if}}
		{{ms-to-s totalTime}}
	</h2>
</div>

<button class="btn btn-sm btn-primary" {{action "step"}}>
	{{#if isTiming}}
		Step
	{{else}}
		Start
	{{/if}}
</button>
<button class="btn btn-sm btn-warning" {{action "stop"}}>Stop</button>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Total ({{ms-to-s solves.totalMean}})</th>
			{{#if solveMethod.isMultiStep}}
				{{#each solveMethod.steps}}
					<th>{{name}}</th>
				{{/each}}
			{{/if}}
		</tr>
	</thead>
	{{#each solves}}
		{{render "solve" this}}
	{{/each}}
</table>

{{#placeholder-panel}}
	Stacked area graph
{{/placeholder-panel}}