<h4>{{solve.scramble}}</h4>

<div>
	{{#if solveMethod.isMultiStep}}
		{{status-pills pills=solveMethodStepNames currentIndex=solve.currentStepIndex}}
		<h3>
			{{solve.currentStep.name}}: {{time}}
		</h3>
	{{/if}}
	<h2>Total: {{totalTime}}</h2>
</div>

<button {{action "step"}}>Step</button>
<button {{action "stop"}}>Stop</button>

{{#each solve.stepResults}}
	{{step.name}}: {{time}}
{{/each}}


