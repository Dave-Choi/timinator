	Start/stop controls
{{/placeholder-panel}}

{{#placeholder-panel}}
	Tabular results (use Ember Table)
	{{#each solves}}
		{{scramble}}
		{{#each stepResults}}
			{{time}}
		{{/each}}
	{{/each}}
{{/placeholder-panel}}

